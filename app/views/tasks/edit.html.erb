<h1>編集</h1>
<div style="width: 300px;">
  <%= form_with model: @task, local: true do |f| %>
    <div>
    <%= f.label :title, "【タイトル】" %>
    <%= f.text_field :title, size: 50 %>
    </div>
    <div>
    <%= f.label :description, "【詳細】" %>
    <%= f.text_area :description %>
    </div>
    <%= f.submit '更新' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', tasks_url %></p>